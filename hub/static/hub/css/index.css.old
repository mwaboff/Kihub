#section-intro {
    text-align: center;
}

#intro-text {
    color: black;
    transition: color 0.3s;
}

#intro-text:hover {
    text-decoration: none;
    color: #8EBF06;
}

#section-intro {
    background-color: #DED9BD;
    color: #212121;
}

#section-about {
    background-color: #8EBF06;
