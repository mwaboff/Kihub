#main-content {
    display: none;
}

.my-projects {
    color: white;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
}

.project {
    /*background: url(http://mwaboff.com/images/portfolio/HFES.png);*/
    border: solid white;
    border-width: 1px;
    cursor: pointer;
    height: 200px;
    width: 350px;
    margin: 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    transition: all 0.5s, border 1.0s;
    overflow: hidden;
}

.project-title {
    max-width: 90%;
    font-size: 24px;
    transition: 0.5s;
}

.project-desc {
    height: 0px;
    max-width: 90%;
    visibility: hidden;
    opacity: 0;
    font-size: 16px;
}

.project:hover {
    /*background: black;*/
    /*transform: scale(1.1);*/
    /*width: 100%;
    height: 500px;*/
}

.project:hover .project-title{
    color: #FEFF5F;
}

.project:hover .project-desc {
    visibility: visible;
    opacity: 1;
}

.project-content {
    max-width: 90%;
    width: 100%;
    padding: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
}






.project-container-2 {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    float: left;
    /* text-align: right; */
    padding: 30px;
}

.project-sections {
    background-color: rgb(23, 23, 23);
    width: 100%;
}


